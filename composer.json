{
    "name": "getpop/custompostmedia-wp",
    "type": "library",
    "description": "Implementation for WordPress of contracts from package \"Custom Post Media\"",
    "keywords": [
        "PoP",
        "custompostmedia-wp"
    ],
    "homepage": "https://github.com/PoPSchema/custompostmedia-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php" : "~7.1",
        "getpop/custompostmedia": "dev-master",
        "getpop/customposts-wp": "dev-master",
        "getpop/media-wp": "dev-master",
        "getpop/migrate-custompostmedia-wp": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\CustomPostMediaWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\CustomPostMediaWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
