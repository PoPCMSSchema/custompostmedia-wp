{
    "name": "getpop/postmedia-wp",
    "type": "library",
    "description": "Implementation for WordPress of contracts from package \"Post Media\"",
    "keywords": [
        "PoP",
        "postmedia-wp"
    ],
    "homepage": "https://github.com/getpop/postmedia-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php" : "~7.1",
        "getpop/postmedia": "~0.1",
        "getpop/posts-wp": "~0.1",
        "getpop/media-wp": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "files": [
            "initialize.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\PostMediaWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
